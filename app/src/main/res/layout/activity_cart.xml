<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_cart"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@drawable/gradient_blue_header"
        android:elevation="4dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back_cart"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_circle_white_transparent"
            android:contentDescription="Go back to home"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:contentDescription="My Shopping Cart"
            android:gravity="center"
            android:text="My Cart"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_tts_toggle_cart"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_circle_white_transparent"
            android:contentDescription="Toggle voice guidance"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_volume" />
    </LinearLayout>

    <!-- Cart Items RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cart_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/checkout_container"
        app:layout_constraintTop_toBottomOf="@+id/header_cart" />

    <!-- Empty Cart State -->
    <LinearLayout
        android:id="@+id/empty_cart_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/checkout_container"
        app:layout_constraintTop_toBottomOf="@+id/header_cart">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0.3"
            android:contentDescription="Empty cart illustration"
            android:src="@drawable/ic_empty_cart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:contentDescription="Your cart is currently empty"
            android:text="Your cart is empty"
            android:textColor="@color/gray_400"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_start_shopping"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_button_blue_rounded"
            android:contentDescription="Start shopping button"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="Start Shopping"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Checkout Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/checkout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingVertical="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="Total price label"
                    android:text="Total"
                    android:textColor="@color/gray_800"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Total cart price"
                    android:text="RM0.00"
                    android:textColor="@color/blue_600"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_checkout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/gradient_green_button"
                android:contentDescription="Proceed to Checkout button"
                android:text="Proceed to Checkout"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>