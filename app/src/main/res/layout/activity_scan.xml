<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Camera Preview (Managed by CameraManager.java) -->
    <TextureView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Bar with Gradient -->
        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:background="@drawable/gradient_blue_header"
            android:gravity="bottom|center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_circle_white_transparent"
                android:contentDescription="Go back to home"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:contentDescription="Point your camera at a product to scan"
                android:gravity="center"
                android:text="Point camera at product"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_tts_toggle_scan"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_circle_white_transparent"
                android:contentDescription="Toggle voice guidance"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_volume" />
        </LinearLayout>

        <!-- Camera Viewfinder Overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            app:layout_constraintBottom_toTopOf="@id/detection_result_container">

            <ImageView
                android:id="@+id/viewfinder_overlay"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                android:src="@drawable/viewfinder_frame"
                android:contentDescription="Camera viewfinder frame" />
        </FrameLayout>

        <!-- Detection Result Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/detection_result_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:visibility="gone"
            app:cardCornerRadius="24dp"
            app:cardElevation="16dp"
            app:layout_constraintBottom_toTopOf="@id/bottom_actions">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android.orientation="horizontal"
                android:padding="24dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_product_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_product_placeholder"
                    android:contentDescription="Product icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textColor="@color/gray_800"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tv_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM0.00"
                        android:textColor="@color/green_600"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add"
                    android:contentDescription="Add product to cart"
                    app:tint="@color/white"
                    app:backgroundTint="@color/green_600"
                    app:fabSize="normal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bottom Actions -->
        <LinearLayout
            android:id="@+id/bottom_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_black_bottom"
            android:orientation="horizontal"
            android:padding="24dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btn_view_cart_from_scan"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:text="View Cart"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingStart="42dp"
                android:paddingEnd="42dp"
                android:drawableStart="@drawable/ic_shopping_cart"
                android:drawablePadding="12dp"
                android:background="@drawable/bg_button_white_rounded"
                android:contentDescription="View shopping cart" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>